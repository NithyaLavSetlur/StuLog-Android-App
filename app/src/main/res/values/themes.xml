<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.StuLogAndroidApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary branding color -->
        <item name="colorPrimary">#66344C</item> <!-- Deep Plum -->
        <item name="colorPrimaryVariant">#CA9CE1</item> <!-- Pastel Purple -->
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary / Accent color -->
        <item name="colorSecondary">#664F69</item> <!-- Muted Mauve -->
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Backgrounds and surfaces -->
        <item name="android:windowBackground">#FDF9FD</item> <!-- Soft lilac -->
        <item name="colorSurface">#9A7B9A</item> <!-- Lavender Grey -->
        <item name="colorOnSurface">#000000</item>

        <!-- Text and icon colors -->
        <item name="android:textColor">#000000</item>

        <!-- Use Material Components style -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

</resources>

