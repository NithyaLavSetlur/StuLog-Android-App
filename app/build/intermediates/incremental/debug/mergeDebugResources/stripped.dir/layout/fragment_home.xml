<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#6B6B6B"
    tools:context=".ui.home.HomeFragment">

    <!-- Add New Subject Button -->
    <ImageButton
        android:id="@+id/btnAddSubject"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add Subject"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- Greeting Message -->
    <TextView
        android:id="@+id/textGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Morning, User!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="8dp"/>

    <!-- Inspirational Message -->
    <TextView
        android:id="@+id/textInspirational"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inspirational!"
        android:textStyle="italic"
        android:textSize="14sp"
        android:paddingBottom="8dp"/>

    <!-- Placeholder for graphic -->
    <ImageView
        android:id="@+id/imgGraphic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center" />

    <!-- Horizontal pager for subjects -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerSubjects"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="12dp"/>

    <!-- Details Button -->
    <Button
        android:id="@+id/btnDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details" />

    <!-- Tab Dots for ViewPager -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"
        app:tabIndicatorHeight="0dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="@android:color/darker_gray" />

    <!-- RecyclerView for tasks -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_task"
        android:contentDescription="Recycler View for Tasks" />
</LinearLayout>
